# enable mod_rewrite
RewriteEngine On

# directory base, change this case your .htaccess don't stay on root directory
# of apache (usually www or htdocs)
RewriteBase /

# if REQUEST_URI has 'method' (to-do: do: improve this regex)
RewriteCond %{REQUEST_URI} ^(.*)method(.*)$
# and query string is not empty
RewriteCond %{QUERY_STRING} !=""
# and match with the pattern below
RewriteCond %{QUERY_STRING} ^user=([0-9-a-z\-]+)&country=([0-9-a-z\-]+)$ [NC]
# redirect (the browser will be informed that the page had changed address. So he will make a new request with the correct URL (and this rule will be ignored in the next request ))
RewriteRule ^(.*)$ controller/method/%1/%2/? [R=301,L]

# ignore files and directories on the file system
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# rewrite the URL
RewriteRule ^(.*)$ index.php/$1 [L]